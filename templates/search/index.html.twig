{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block body %}
    <div class="main">
        {% include 'layout/navbar.html.twig' %}
        <div class="content">
            <div class="search">
                <div class="search__container">
                    <div class="search__icon">
                        <img src="{{ asset('assets/svg/searchIcon.svg') }}" alt="searchLogo" class="search__svg">
                    </div>
                    <div class="search__tittle">Поиск любимых авторов</div>
                    <div class="search__input">
                        <div class="search__input__container">
                            <label class="search__input__field">
                                <input type="text" placeholder="Найти авторов или темы" class="search__input__field">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('assets/js/navbar.js') }}"></script>
    {% endblock %}
{% endblock %}